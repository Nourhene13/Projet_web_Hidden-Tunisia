{% extends "basebackparid.html.twig" %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md3">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.email) }}
					{{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.nomUser) }}
					{{ form_widget(form.nomUser,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.prenomUser) }}
					{{ form_widget(form.prenomUser,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.numTel) }}
					{{ form_widget(form.numTel,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.dateNaissance) }}
					{{ form_widget(form.dateNaissance,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					<button class="btn btn-info mt-2 text-white">update</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
