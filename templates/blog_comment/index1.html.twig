{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
    <div class="container">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success mt-4 mb-b">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">content</th>
                    <th scope="col">id user</th>
                    <th scope="col">Likes</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for data in list %}
                    <tr>
                        <th scope="row">{{ data.id }}</th>
                        <td>{{ data.getContent() }}</td>
                        <td>{{ data.getUtilisateur().getId() }}</td>
                        <td>
                            <span id="likes-{{ data.id }}">{{ data.getLikes() }}</span>
                            <button class="btn btn-primary" onclick="updateLikes({{ data.id }})">Like</button>
                        </td>
                        <td>
                            <a class="btn btn-warning" href="{{ path('update1',{'id': data.id }) }}">Update</a>
                            <a class="btn btn-danger" href="{{ path('delete1',{'id': data.id }) }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
