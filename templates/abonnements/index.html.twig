{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('notice') %}
			<div class="alert alert-success mt-4 mb-b">
				{{ message }}
			</div>
		{% endfor %}
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">date ab</th>
					<th scope="col">Date exp</th>
					<th scope="col">categorie</th>

					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for data in list %}
					<tr>
						<th scope="row">{{ data.id }}</th>

						<td>{{ data.getDateAb()|date("m/d/Y") }}</td>
						<td>{{ data.getDateExp()|date("m/d/Y") }}</td>


						<td>{{ data.getCategorieAb() }}</td>


						<td>
							<a class="btn btn-warning" href="{{ path('update1',{'id': data.id }) }}">Update</a>
							<a class="btn btn-danger" href="{{ path('delete1',{'id': data.id }) }}">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
