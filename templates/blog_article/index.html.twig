{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
    <div class="container">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success mt-4 mb-b">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Author</th>
                    <th scope="col">Category</th>
                    <th scope="col">State</th>
                    <th scope="col">Image</th>
                    <th scope="col">User Id</th>
                    <th scope="col">Comment Count</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for data in list %}
                    <tr>
                        <th scope="row">{{ data.id }}</th>
                        <td>{{ data.getTitle() }}</td>
                        <td>{{ data.getContent() }}</td>
                        <td>{{ data.getAuthor() }}</td>
                        <td>{{ data.getCategory() }}</td>
                        <td>{{ data.getState() }}</td>
                        <td>{{ data.getImage() }}</td>
                        <td>{{ data.getUtilisateur().getId() }}</td>
                        <td>{{ commentCounts[data.id] }}</td>
                        <td>
                            <a class="btn btn-warning" href="{{ path('update',{'id': data.id }) }}">Update</a>
                            <a class="btn btn-danger" href="{{ path('delete',{'id': data.id }) }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
