{% extends "basefront.html.twig" %}
{% block body %}
	<!-- Portfolio Grid-->
	<section class="page-section bg-light" id="portfolio"></br>

	<div class="container">
		<div class="sharethis-inline-share-buttons"></div>
		<div class="text-center">
			<h2 class="section-heading text-uppercase">NOURRITURES</h2>
		</div>
		<div class="row">
			{% for nourriture in nourritures %}
				<div
					class="col-lg-4 col-sm-6 mb-4">
					<!-- Portfolio item 1-->
					<div class="portfolio-item">
						<a class="portfolio-link">
							<div class="portfolio-hover">
								<div class="portfolio-hover-content"></div>
							</div>
							<img class="img-fluid" src="{{asset('uploads/images/'~ nourriture.image )}}" alt="..."/>

						</a>
						<div class="portfolio-caption">
							<center>

								<div class="portfolio-caption-subheading text-muted">{{nourriture.nomNourriture}}</div>
								<div class="portfolio-caption-subheading text-muted">{{nourriture.OrigineNourriture}}</div>
								<div class="portfolio-caption-subheading text-muted">{{nourriture.ingrediant}}</div>
								<div class="portfolio-caption-subheading text-muted">{{nourriture.PrixNourriture}}</div>
								<div class="portfolio-caption-subheading text-muted">{{nourriture.TypeNourriture}}</div>


							</center>


						</div>
					</div>
				</div>
			{% endfor %}
			<h1>
				{{  knp_pagination_render(nourritures) }}
			</h1>
		</div>
	{% endblock %}
