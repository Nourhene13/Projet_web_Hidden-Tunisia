{% extends "basefront.html.twig" %}
{% block body %}
	<!-- Portfolio Grid-->
	<section class="page-section bg-light" id="portfolio"></br>

		<div class="container">
			<div class="sharethis-inline-share-buttons"></div>
			<div class="text-center">
				<h2 class="section-heading text-uppercase">NOURRITURES</h2>
			</div>
			<div class="row">
				{% for Civilisation in Civilisations %}
					<div
						class="col-lg-4 col-sm-6 mb-4">
						<!-- Portfolio item 1-->
						<div class="portfolio-item">
							<a class="portfolio-link">
								<div class="portfolio-hover">
									<div class="portfolio-hover-content"></div>
								</div>
								<img class="img-fluid" src="{{asset('uploads/images/'~ Civilisation.image )}}" alt="..."/>

							</a>
							<div class="portfolio-caption">

									<div class="portfolio-caption-subheading text-muted">{{Civilisation.nomcivilisation}}</div>
									<div class="portfolio-caption-subheading text-muted">{{Civilisation.datedbuitcivilisation|date('m/d/Y')}}</div>
									<div class="portfolio-caption-subheading text-muted">{{Civilisation.datefincivilisation|date('m/d/Y')}}</div>


							</div>
						</div>
					</div>
				{% endfor %}
				<h1>
					{{  knp_pagination_render(Civilisations) }}
				</h1>
			</div>
		</div>
	</section>
	{% endblock %}
